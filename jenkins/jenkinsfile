pipeline{
        agent any
        environment {
            CREATE_SCHEMA = "true"
            RUN_APP = "true"
            DATABASE_URI = credentials("DATABASE_URI")
        }
        stages{
            stage('setup'){
                steps{
                    sh "bash jenkins/setup.sh"
                    ///
                }
            }
            stage('test'){
                steps{
                    sh "bash jenkins/test.sh"
                }
            }
        }
        stage('create schema') {
            steps{
                script{
                    if(env.CREATE_SCHEMA == "true") {
                        sh 'echo "Creating Schema Now ..." '
                        sh "python3 create.py"
                        sh 'echo "Schema created!"'
                    }
                }

            }

        }  
        stage('Run') {
            steps {
                script{
                    if (env.RUN_APP == "true") {
                        sh "python3 app.py"
                    }
                }
            }
        }

}